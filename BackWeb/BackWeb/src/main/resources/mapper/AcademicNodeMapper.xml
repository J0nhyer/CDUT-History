<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cdut.ai.mapper.AcademicNodeMapper">

    <select id="findByNodeId" parameterType="string" resultType="org.cdut.ai.model.AcademicNode">
        SELECT * FROM academic_node WHERE node_id = #{nodeId}
    </select>

    <select id="findByType" parameterType="string" resultType="org.cdut.ai.model.AcademicNode">
        SELECT * FROM academic_node WHERE type = #{type} ORDER BY sort_order ASC
    </select>

    <select id="findAllOrderBySortOrder" resultType="org.cdut.ai.model.AcademicNode">
        SELECT * FROM academic_node ORDER BY sort_order ASC
    </select>

</mapper>

