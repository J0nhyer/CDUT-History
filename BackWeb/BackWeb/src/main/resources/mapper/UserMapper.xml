<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cdut.ai.mapper.UserMapper">

    <select id="findByUsername" parameterType="string" resultType="org.cdut.ai.model.User">
        SELECT * FROM login WHERE username = #{username}
    </select>

    <select id="findByEmail" parameterType="string" resultType="org.cdut.ai.model.User">
        SELECT * FROM login WHERE email = #{email}
    </select>

</mapper>
