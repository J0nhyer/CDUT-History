<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cdut.ai.mapper.PersonMapper">

    <!-- ResultMap明确字段映射 -->
    <resultMap id="PersonResultMap" type="org.cdut.ai.model.Person">
        <id column="id" property="id"/>
        <result column="person_id" property="personId"/>
        <result column="name" property="name"/>
        <result column="subtitle" property="subtitle"/>
        <result column="image_url" property="imageUrl"/>
        <result column="key_tags" property="keyTags"/>
        <result column="data_status" property="dataStatus"/>
        <result column="last_verified" property="lastVerified"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <select id="findByPersonId" parameterType="string" resultMap="PersonResultMap">
        SELECT * FROM person WHERE person_id = #{personId}
    </select>

    <select id="findByNameLike" parameterType="string" resultMap="PersonResultMap">
        SELECT * FROM person WHERE name LIKE CONCAT('%', #{name}, '%')
    </select>

    <select id="findByDataStatus" parameterType="string" resultMap="PersonResultMap">
        SELECT * FROM person WHERE data_status = #{dataStatus}
    </select>

</mapper>

